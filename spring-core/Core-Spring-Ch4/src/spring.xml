<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0 //EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="circle" class="com.spring.Circle">
		<property name="radius" value="${radius}" />
		<property name="type" value="${type}" />
	</bean>

	<bean class="com.spring.DisplayNameBeanPostProcessor" />

	<bean class="com.spring.MyBeanFactoryPostProcessor" />
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="circle.cfg" />
	</bean>

</beans>