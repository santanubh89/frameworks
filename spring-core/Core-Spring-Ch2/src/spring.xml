<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0 //EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.spring.Triangle" autowire="byName" />

	<bean id="pointA" class="com.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointB" class="com.spring.Point">
		<property name="x" value="10" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="com.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="10" />
	</bean>
	
	<bean id="circle-bean" class="com.spring.Circle" scope="singleton">
		<property name="radius" value="10" />
	</bean>

</beans>